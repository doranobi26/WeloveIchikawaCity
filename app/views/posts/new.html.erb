<div class="post-form">
 <div class="container">
   <div class="row">
    <div class="col-xs-1"></div>
     <div class=" col-xs-10">
       <h3 class="new_post">新規投稿</h3>
         <% if @post.errors.any? %>
           <%= render 'posts/alert', post: @post %>
         <% end %>
         <%= form_with model:@post, html:{name: 'form'} do |f| %>
          <p class="form">
           <%= f.label :タイトル（20字以内）  %>
           <%= f.text_field :title,class:"btn-block form-controll" %>
          </p>
          <p class="form">
           <%= f.label :説明文（300字以内） %>
           <%= f.text_area :caption,class:"btn-block form-controll" %>
           <!-- idを加えることでgetElementById("select_file")をとれる。 -->
          </p>
          <p class="form">
           <%= f.label :添付画像選択（1枚以上3枚以内） %>
           <%= f.attachment_field :images_images, multiple: true, id:"select_file" %>
          </p>
          <p class="form">
            <%= f.label :地域名選択 %>
            <%= f.collection_select :area_id, Area.all, :id, :name,class:"select-controll" %>
          </p>
          <p class="form">
            <%= f.label :評価 %>
            <span class="star"></span>
            <%= f.hidden_field :score, id: :review_star %>
          </p>
         <%= f.submit "投稿する",class: "btn btn-primary btn-block post-button",id:"submit_button" %>
         <% end %>
     </div>
     <div class="col-xs-1"></div>
   </div>
 </div>
</div>
<%= render 'posts/script', post: @post %>


