<div class="row">
 <div class="col-xs-1"></div>
 <div class="col-xs-10">
 	<h3>
 		<%= user.name %>様の投稿一覧
 	</h3>
	 <table class="table table-hover table-invrese">
	    <thead>
		   <tr>
			 <th></th>
			 <th>地域名</th>
			 <th>タイトル</th>
			 <th>紹介文</th>
			 <th>投稿日時</th>
			 <th></th>
		    </tr>
		</thead>

		<tbody>
		 <% @users.each do |user| %>
		    <tr>
			  <td>
			   <%= attachment_image_tag user, :profile_image, size: "50x50",
			  format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %>
			  </td>
			  <td>
			   <%= post.name %>
			  </td>
			  <td>
			  	<%= post.title %>
			  </td>
			  <td>
			  	<%= post.caption %>
			  </td>
			  <td>
			  	<%= post.created_at %>
			  </td>
			  <td>
			   <%= link_to "詳細画面" ,post_path(post.id) %>
			  </td>
			</tr>
		<% end %>
		</tbody>
	</table>
  </div>
  <div class="col-xs-1"></div>
 </div>