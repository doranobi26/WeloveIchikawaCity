<div class="favorite-index-body">
  <div class="container">
    <div class="row text-center">
      <h1><i class="fas fa-heart"></i></h1>
    </div>
    <div class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-10">
        <table class="table table-hover table-invrese">
          <thead>
            <tr>
              <th>投稿者</th>
              <th>地域名</th>
              <th>タイトル</th>
              <th><i class="far fa-clock"></i></th>
            </tr>
          </thead>
          <tbody>
            <% @favorites.each do |favorite| %>
              <tr>
                <td>
                  <%=link_to user_profile_path(favorite.post.user.id) do %>
                    <%= attachment_image_tag favorite.post.user, :profile_image, size: "50x50",
                      format: 'jpeg', fallback: "no_image.jpg" %><br>
                    <%= favorite.post.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= favorite.post.area.name %>
                </td>
                <td>
                  <%= link_to post_path(favorite.post.id) do %>
                    <%= favorite.post.title %>
                  <% end %>
                </td>
                <td>
                  <%= favorite.created_at.strftime("%Y-%m-%d %H:%M:%S")  %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-xs-1"></div>
    </div>
    <div class="row text-center">
      <%= paginate @favorites %>
    </div>
  </div>
</div>