<div class="row">
  <div class="col-xs-3"></div>

  <div class="col-xs-6">

   <h2>ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
     <%= f.label :ユーザー名 %><br />
     <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"btn-block" %>
    </div>

    <div class="field">
     <%= f.label :パスワード %><br />
     <%= f.password_field :password, autocomplete: "current-password",class:"btn-block" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
     <%= f.check_box :remember_me %>
     <%= f.label :パスワードを保存する方はここにチェックを入れて下さい %>
    </div>
    <% end %>

    <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-primary btn-block" %>
    </div>
   <% end %>

   <%= render "devise/shared/links" %>
  </div>

  <div class="col-xs-3"></div>
</div>
