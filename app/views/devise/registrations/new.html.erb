<div class="row">
　<div class="header-color">
  <div class="col-xs-3"></div>

  <div class="col-xs-6">
   <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"btn-block" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"btn-block" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上入力して下さい)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class:"btn-block" %>
    </div>

    <div class="field">
      <%= f.label :確認用パスワード %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"btn-block" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録",class:"btn btn-success btn-block" %>
    </div>
   <% end %>

<%= render "devise/shared/links" %>
</div>

  <div class="col-xs-3"></div>
</div>
</div>
